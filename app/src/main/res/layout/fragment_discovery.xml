<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey">

    <android.support.v7.widget.SearchView
        android:id="@+id/searchDiscovery"
        style="@style/SearchStyle"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="@dimen/dp_4"
        android:background="@drawable/border_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="@string/discovery_search" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerDiscovery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchDiscovery" />

    <ProgressBar
        android:id="@+id/progressLoading"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageAroundHere"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:contentDescription="@string/discovery_search"
        android:src="@drawable/ic_around_here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAroundHere"
        style="@style/Common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discovery_around_here"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageAroundHere" />

    <android.support.constraint.Group
        android:id="@+id/groupAroundHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="imageAroundHere, textAroundHere" />
</android.support.constraint.ConstraintLayout>
