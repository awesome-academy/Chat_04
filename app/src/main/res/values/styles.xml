<?xml version="1.0"?>

<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="Common">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="SignUpToolBar" parent="Common">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_white</item>
    </style>

    <style name="SignUpGender" parent="Common">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:layout_marginLeft">@dimen/dp_32</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="ProfileStyle" parent="Common">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchStyle" parent="SignUpToolBar">
        <item name="android:background">@color/color_white</item>
    </style>

    <style name="ButtonSignUpStyle" parent="SignUpToolBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@color/color_blue</item>
    </style>

    <style name="SignUpField" parent="SignUpGender">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:background">@drawable/border_selector</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_marginRight">@dimen/dp_16</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LogoAppStyle" parent="Common">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EmailPassLoginStyle" parent="Common">
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/border_selector</item>
    </style>

    <style name="ButtonLogin" parent="Common">
        <item name="android:background">@color/color_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="ButtonBeforeLogin" parent="Common">
        <item name="android:background">@color/color_pink_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="ButtonLoginFace" parent="ButtonLogin">
        <item name="android:background">@color/color_blue_face</item>
    </style>

    <style name="ProfileToolbar" parent="Common">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileFullName" parent="Common">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>
</resources>

